<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="top.defaults.pickerviewapp.MainActivity">

    <top.defaults.view.DateTimePickerView
        android:id="@+id/datePickerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:preferredMaxOffsetItemCount="4"
        app:type="dateTime"
        app:minutesInterval="fifteen"
        android:background="#e7e7e7"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_type"/>

    <ToggleButton
        android:id="@+id/curved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="curved"
        android:textOff="normal"/>
</LinearLayout>
