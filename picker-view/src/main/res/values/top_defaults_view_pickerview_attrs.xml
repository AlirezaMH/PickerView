<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="preferredMaxOffsetItemCount" format="integer" />
    <attr name="itemHeight" format="dimension" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="isCyclic" format="boolean" />
    <attr name="autoFitSize" format="boolean" />

    <declare-styleable name="PickerView">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="isCyclic" />
        <attr name="autoFitSize" />
    </declare-styleable>

    <declare-styleable name="PickerViewGroup">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="autoFitSize" />
        <attr name="type" format="enum">
            <enum name="dateTime" value="0"/>
            <enum name="dateHourMinute" value="1"/>
            <enum name="yearMonthDayHourMinute" value="2"/>
            <enum name="yearMonthDay" value="3"/>
        </attr>
    </declare-styleable>
</resources>